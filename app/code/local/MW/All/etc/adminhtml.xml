<?xml version="1.0"?>
<config>
    <layout>
        <updates>
            <mwall module="MW_All">
                <file>mw_all.xml</file>
            </mwall>
        </updates>
    </layout>
    <menu>
        <mwall>
            <title>Mage Whiz</title>
            <sort_order>75</sort_order>
            <children>
                <extensionmanagement>
                    <title>Extension Management</title>
                    <sort_order>-10</sort_order>
                    <action>mwall/adminhtml_extension</action>
                </extensionmanagement>
            </children>
        </mwall>
    </menu>
    <acl>
        <resources>
            <all>
                <title>Allow Everything</title>
            </all>
            <admin>
                <children>
                    <system>
                        <children>
                            <config>
                                <children>
                                    <mwall>
                                        <title>Mage Whiz - All</title>
                                    </mwall>
                                </children>
                            </config>
                        </children>
                    </system>
                </children>
            </admin>
        </resources>
    </acl>
    <events>
        <controller_action_predispatch>
            <observers>
                <mwall_exts>
                    <type>singleton</type>
                    <class>mwall/feed_extension</class>
                    <method>checkUpdate</method>
                </mwall_exts>
                <mwall_upds>
                    <type>singleton</type>
                    <class>mwall/feed_update</class>
                    <method>checkUpdate</method>
                </mwall_upds>
            </observers>
        </controller_action_predispatch>
    </events>
</config>